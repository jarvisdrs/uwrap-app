generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTH
// ============================================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts       Account[]
  sessions       Session[]
  organizations  OrganizationMember[]
  projects       ProjectMember[]
  scripts        Script[]
  lockedScripts  Script[]             @relation("LockedBy")
  scriptVersions ScriptVersion[]
  scriptComments ScriptComment[]
  assets         Asset[]
  notifications  Notification[]
  callSheets     CallSheet[]
  Project        Project[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// ============================================
// ORGANIZATIONS (Multi-tenant)
// ============================================

model Organization {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  logo      String?
  settings  Json     @default("{\"defaultTimezone\": \"UTC\", \"dateFormat\": \"DD/MM/YYYY\", \"theme\": \"system\"}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  members  OrganizationMember[]
  projects Project[]

  @@map("organizations")
}

model OrganizationMember {
  id             String   @id @default(uuid())
  userId         String
  organizationId String
  role           UserRole @default(MEMBER)
  joinedAt       DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@map("organization_members")
}

enum UserRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

// ============================================
// PROJECTS
// ============================================

model Project {
  id             String        @id @default(uuid())
  name           String
  description    String?
  status         ProjectStatus @default(IDEA)
  coverImage     String?
  startDate      DateTime?
  endDate        DateTime?
  organizationId String
  createdById    String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Relations
  organization Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdBy    User            @relation(fields: [createdById], references: [id], onDelete: Cascade)
  members      ProjectMember[]
  scripts      Script[]
  shootingDays ShootingDay[]
  assets       Asset[]
  assetFolders AssetFolder[]

  @@map("projects")
}

enum ProjectStatus {
  IDEA
  PRE_PRODUCTION
  PRODUCTION
  POST_PRODUCTION
  COMPLETED
  ARCHIVED
}

model ProjectMember {
  id        String   @id @default(uuid())
  projectId String
  userId    String
  role      UserRole @default(MEMBER)
  joinedAt  DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@map("project_members")
}

// ============================================
// SCRIPTS
// ============================================

model Script {
  id          String    @id @default(uuid())
  projectId   String
  title       String
  content     String    @default("")
  version     Int       @default(1)
  isLocked    Boolean   @default(false)
  lockedById  String?
  lockedAt    DateTime?
  createdById String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  project   Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  lockedBy  User?           @relation("LockedBy", fields: [lockedById], references: [id], onDelete: SetNull)
  createdBy User            @relation(fields: [createdById], references: [id], onDelete: Cascade)
  versions  ScriptVersion[]
  comments  ScriptComment[]

  @@map("scripts")
}

model ScriptVersion {
  id                String   @id @default(uuid())
  scriptId          String
  version           Int
  title             String
  content           String
  changeDescription String?
  createdById       String
  createdAt         DateTime @default(now())

  script    Script @relation(fields: [scriptId], references: [id], onDelete: Cascade)
  createdBy User   @relation(fields: [createdById], references: [id], onDelete: Cascade)

  @@unique([scriptId, version])
  @@map("script_versions")
}

model ScriptComment {
  id           String   @id @default(uuid())
  scriptId     String
  userId       String
  content      String
  fromPosition Int?
  toPosition   Int?
  resolved     Boolean  @default(false)
  parentId     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  script  Script          @relation(fields: [scriptId], references: [id], onDelete: Cascade)
  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent  ScriptComment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies ScriptComment[] @relation("CommentReplies")

  @@map("script_comments")
}

// ============================================
// SHOOTING SCHEDULE
// ============================================

model ShootingDay {
  id          String            @id @default(uuid())
  projectId   String
  date        DateTime
  title       String
  description String?
  location    String?
  callTime    String?
  wrapTime    String?
  status      ShootingDayStatus @default(PLANNED)
  order       Int               @default(0)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  project   Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  scenes    ShootingScene[]
  callSheet CallSheet?

  @@map("shooting_days")
}

enum ShootingDayStatus {
  PLANNED
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model ShootingScene {
  id                String   @id @default(uuid())
  shootingDayId     String
  sceneNumber       String
  description       String
  location          String?
  cast              String[]
  props             String[]
  estimatedDuration Int      @default(60)
  order             Int      @default(0)
  completed         Boolean  @default(false)
  notes             String?

  shootingDay ShootingDay @relation(fields: [shootingDayId], references: [id], onDelete: Cascade)

  @@map("shooting_scenes")
}

// ============================================
// CALL SHEETS
// ============================================

model CallSheet {
  id               String   @id @default(uuid())
  shootingDayId    String   @unique
  version          Int      @default(1)
  title            String
  generalCallTime  String
  weatherNotes     String?
  parkingNotes     String?
  hospitalInfo     String?
  emergencyContact String?
  generatedAt      DateTime @default(now())
  createdById      String
  pdfUrl           String?

  // Relations
  shootingDay ShootingDay     @relation(fields: [shootingDayId], references: [id], onDelete: Cascade)
  createdBy   User            @relation(fields: [createdById], references: [id], onDelete: Cascade)
  cast        CallSheetCast[]
  crew        CallSheetCrew[]

  @@map("call_sheets")
}

model CallSheetCast {
  id          String  @id @default(uuid())
  callSheetId String
  name        String
  character   String
  callTime    String
  notes       String?

  callSheet CallSheet @relation(fields: [callSheetId], references: [id], onDelete: Cascade)

  @@map("call_sheet_cast")
}

model CallSheetCrew {
  id          String  @id @default(uuid())
  callSheetId String
  name        String
  role        String
  department  String
  callTime    String
  notes       String?

  callSheet CallSheet @relation(fields: [callSheetId], references: [id], onDelete: Cascade)

  @@map("call_sheet_crew")
}

// ============================================
// ASSETS
// ============================================

model Asset {
  id           String    @id @default(uuid())
  projectId    String
  folderId     String?
  name         String
  description  String?
  type         AssetType
  url          String
  thumbnailUrl String?
  size         Int       @default(0)
  mimeType     String    @default("application/octet-stream")
  metadata     Json?
  tags         String[]  @default([])
  uploadedById String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  project    Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  folder     AssetFolder? @relation(fields: [folderId], references: [id], onDelete: SetNull)
  uploadedBy User         @relation(fields: [uploadedById], references: [id], onDelete: Cascade)

  @@map("assets")
}

enum AssetType {
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
  OTHER
}

model AssetFolder {
  id        String   @id @default(uuid())
  projectId String
  name      String
  parentId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project  Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  parent   AssetFolder?  @relation("FolderHierarchy", fields: [parentId], references: [id])
  children AssetFolder[] @relation("FolderHierarchy")
  assets   Asset[]

  @@map("asset_folders")
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id        String           @id @default(uuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  data      Json?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

enum NotificationType {
  PROJECT_CREATED
  PROJECT_UPDATED
  PROJECT_INVITE
  SCRIPT_COMMENT
  SCRIPT_LOCKED
  SHOOTING_DAY_UPDATED
  ASSET_UPLOADED
  CALL_SHEET_GENERATED
}
